# Used by Rails to encrypt session, cookies, and other secrets. Must be kept secret in production.
# You can generate a secure value with: rails secret
SECRET_KEY_BASE=changeme-for-dev

#
# Database connection settings (e.g. for external MySQL)
# If MySQL is running on the host machine and you're running the app in Docker,
# use `host.docker.internal` instead of `localhost` (especially on macOS/Windows).
#
PERP_DATABASE_HOST=localhost
PERP_DATABASE_USERNAME=perp
PERP_DATABASE_PASSWORD=
PERP_DATABASE_NAME=perp_development
PERP_TEST_DATABASE_NAME=perp_test

# These credentials are used to create an initial admin user via db:seed if no users exist
# Initial Admin (for db:seed)
INITIAL_ADMIN_EMAIL=admin@localhost
INITIAL_ADMIN_PASSWORD=

# Set to "true" to disable SSL enforcement in production (useful for local or proxy-based testing)
DISABLE_SSL=false

# Mail delivery method (e.g. smtp, sendmail, test)
MAIL_DELIVERY_METHOD=test

# SMTP settings
# SMTP server address
# MAIL_HOST=
# SMTP server port
# MAIL_PORT=
# SMTP user name
# MAIL_USER=
# SMTP password
# MAIL_PASSWORD=
# Domain used in SMTP HELO command
# MAIL_DOMAIN=

# Sentry DSN for error tracking (optional)
SENTRY_DSN=
