<%= form_for @measuring_session do |f| %>

  <div class="form-group">
    <%= f.label :device_description %>
    <%= f.text_field :device_description %>
  </div>

  <div class="form-group">
    <%= f.label 'MesspunktNr' %>
    <%= f.select 'MesspunktNr', @measuring_points.map { |mp| [ mp.name, mp.MesspunktNr ] } %>
  </div>

  <%= f.button 'Los gehts', type: :submit, class: 'btn btn-primary' %>
<% end %>