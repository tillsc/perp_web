<div class="table-responsive-md">
  <table class="table">
    <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.number %> - <%= event.name_short %></td>
        <td><%= event.name %></td>
        <% participants_count = event.participants.reject(&:withdrawn).size %>
        <td><%= link_to "#{participants_count} Meldungen", event_participants_path(@regatta, event) if participants_count > 0 %></td>
        <td><%= link_to "#{event.starts_count} Starts", event_starts_path(@regatta, event) if event.starts_count > 0 %></td>
        <td><%= link_to "#{event.results_count} Ergebnisse", event_results_path(@regatta, event) if event.results_count > 0 %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
