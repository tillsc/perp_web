<table>
  <thead>
  <tr>
    <th></th>
    <% @measuring_points.each do |mp| %>
      <th><%= mp.name %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @races.each do |race| %>
    <tr>
      <td><%= race.name %></td>
      <% @measuring_points.each do |mp| %>
        <td>
          <% ms = @measurement_sets.find { |ms| ms.race == race && ms.measuring_point == mp } %>
          <%= link_to ms ? "Edit" : "Neu", measurement_path(@regatta, race_number: race.number, event_number: race.event.number, measuring_point_number: mp.number) %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>