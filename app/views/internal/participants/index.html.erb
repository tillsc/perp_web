<h1>Meldungen fÃ¼r <%= @regatta.name %></h1>

<div class="row">
  <div class="col-md-8 col-lg-9">
    <%= render 'list', participants: @participants, referrer: current_url %>
  </div>
  <div class="col-md-4 col-lg-3">
    <%= bootstrap_form_with url: internal_participants_url(@regatta), method: :get do |f| %>
      <%= f.number_field :event_number, label: "Rennen", value: params[:event_number] %>
      <%= f.submit 'Filtern', class: 'btn btn-secondary d-block w-100' %>
    <% end %>

    <hr>

    <%= link_to t('helpers.titles.new', model: Participant.model_name.human), new_internal_participant_path(@regatta, participant: {event_number: params[:event_number]}), class: 'btn btn-secondary d-block my-1' %>
  </div>
</div>