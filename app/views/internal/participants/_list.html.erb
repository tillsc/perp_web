<table class="table">
  <thead>
  <tr>
    <th>Rennen</th>
    <th>Bugnr</th>
    <th>Team</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% participants.each do |participant| %>
    <tr id="participant_<%= participant.to_param %>">
      <td><%=  participant.event && link_to(participant.event.label, internal_event_url(@regatta, participant)) || '!' %></td>
      <td><%= participant.number %></td>
      <td><%= participant.team_name %></td>
      <td>
        <%= link_to "Bearbeiten", edit_internal_participant_url(@regatta, participant, referrer: local_assigns[:referrer]), class: 'btn btn-secondary' if can?(:edit, participant) %>
        <%= button_to("LÃ¶schen", internal_participant_url(@regatta, participant, referrer: local_assigns[:referrer]), method: :delete, data: { confirm: "Sicher?"}, class: 'btn btn-danger') if can?(:delete, participant) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>