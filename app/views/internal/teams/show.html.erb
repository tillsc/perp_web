<h1><%= t('helpers.titles.show', model: Team.model_name.human, label: @team.name) %></h1>

<div class="row">
  <div class="col-md-8 col-lg-9">
    <div class="row">
      <dl class="col">
        <dt><%= Team.human_attribute_name(:name) %></dt>
        <dd><%= @team.name %></dd>
      </dl>
    </div>
  </div>
  <div class="col-md-4 col-lg-3">
    <%= link_to t('helpers.titles.edit', model: Team.model_name.human), edit_internal_team_path(@regatta, @team), class: 'btn btn-secondary d-block my-1' if can?(:edit, @team) %>
    <%= link_to t('helpers.titles.copy', model: Team.model_name.human), new_internal_team_url(@regatta, copy_team: @team.team_id), class: 'btn btn-secondary d-block my-1' if can?(:create, Team) %>
    <%= button_to("LÃ¶schen", internal_team_url(@regatta, @team), method: :delete, data: { confirm: "Sicher?"},
                  class: 'btn btn-danger d-block w-100', form_class: 'd-block my-1') if can?(:delete, @team) %>
  </div>
</div>
