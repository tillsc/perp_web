
<%= bootstrap_form_for @external_measurement, url:
  @external_measurement.persisted? ? internal_external_measurement_url(@regatta, @external_measurement) : internal_external_measurements_url(@regatta) do |f| %>
  <%= hidden_field_tag :referrer, params[:referrer] %>

  <div class="row">
    <div class="col-md-4">
      <%= f.text_field :time, required: true %>
      <%= f.collection_select :measuring_point_number, @measuring_points, :number, :name %>
    </div>
  </div>

  <%= f.primary %>
  <%= link_to "Abbrechen", back_or_default, class: 'btn btn-secondary' %>
<% end %>