<h1>Adresse bearbeiten</h1>

<%= bootstrap_form_for @address, url: internal_address_url(@regatta, @address) do |f| %>
  <%= hidden_field_tag :referrer, params[:referrer] %>

  <div class="row">
    <div class="col">
      <%= f.text_field :title %>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
      <%= f.text_field :name_suffix %>
      <%= f.check_box :is_female %>
      <%= f.text_field :external_id %>
    </div>

    <div class="col">
      <%= f.email_field :email %>

      <%= f.text_field :telefone_private %>
      <%= f.text_field :telefone_business %>
      <%= f.text_field :telefone_mobile %>
      <%= f.text_field :telefone_fax %>
    </div>

    <div class="col">
      <%= f.text_field :street %>
      <%= f.text_field :zipcode %>
      <%= f.text_field :city %>
      <%= f.text_field :country %>

    </div>
  </div>

  <%= f.submit %>
<% end %>