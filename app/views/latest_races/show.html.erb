<% if @race && @results.present? && @measuring_point  %>
  <div class="sticky-top text-white px-3" style="background: var(--bg, rgba(0, 0, 0, 0.3))">
    <strong><%= @race.event.try(:name) %>: <%= @race.name %></strong>
    <span class="text-right"><%= '(Ergebnis vorlÃ¤ufig)' unless @race.is_official? %></span>

    <div class="row">
      <p class="col-md-6">Gestartet um <%= l(@race.started_at, format: '%H:%M:%S') %>, bei <%= @measuring_point.position - (@race.event.try(:start_measuring_point).try(:position) || 0) %>m</p>
      <p class="col-md-6 text-right"><%= @race.event.Zusatztext1 %></p>
    </div>
  </div>

  <div class="text-white fixed-bottom">
    <div class="row">
    <% @results.each_with_index do |res,i| %>
      <div class="col-4">
        <div class="row px-2" style="background: var(--bg, rgba(0, 0, 0, 0.3)); margin-top: 10px; <%= "margin-right: 0px;" if ((i+1) % 3 != 0) %>">
          <div class="col-1"><%= res.participant.try(:number) %></div>
          <div class="col-8 text-truncate"><%= res.participant.try(:team).try(:name) %></div>
          <div class="col-3"><%= res.time_for(@measuring_point).try(:time) %></div>
        </div>
      </div>
    <% end %>
  </div>
  </div>
<% end %>

<style>
  body {
    --bg: <%= params[:bg] || 'rgba(0, 0, 0, 0.3)' %>;
    background-color: lime;
    color: black;
