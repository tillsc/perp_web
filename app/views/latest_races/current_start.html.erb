<% if @race   %>
  <div class="sticky-top text-white px-3" style="background: var(--bg, rgba(0, 0, 0, 0.3))">
    <strong><%= @race.event.try(:name) %>: <%= @race.name %></strong>

    <div class="row">
      <p class="col-md-6">
        <% if @race.started_at %>
          Gestartet um <%= l(@race.started_at, format: '%H:%M:%S') %>
        <% elsif @race.planned_for %>
          Start geplant f√ºr <%= l(@race.planned_for, format: '%H:%M:%S') %>
        <% end %>
      </p>
      <p class="col-md-6 text-right"><%= @race.event.Zusatztext1 %></p>
    </div>
  </div>

  <div class="row text-white fixed-bottom">
    <% @race.starts.each_with_index do |res, i| %>
      <div class="col-4">
        <div class="row px-2" style="background: var(--bg, rgba(0, 0, 0, 0.3)); margin-top: 10px; <%= "margin-right: 0px;" if ((i+1) % 3 != 0) %>">
          <div class="col-1"><%= res.participant.try(:number) %></div>
          <div class="col-11 text-truncate"><%= res.participant.try(:team).try(:name) %></div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<style>
  body {
    --bg: <%= params[:bg] || 'rgba(0, 0, 0, 0.3)' %>;
    background-color: lime;
    color: black;
  //font-smooth: never;
  //-webkit-font-smoothing: none;
    font-weight: bold;
    font-size: 32px;
  }
  h1 { font-weight: bold }
</style>

