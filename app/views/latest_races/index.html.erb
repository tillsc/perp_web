  <%= bootstrap_form_tag url: tv_url(@regatta), method: :put do |f| %>
    <% LatestRacesController::TV_PARAMETER_KEYS.keys.each do |param_name| %>
      <%= f.text_field param_name, value: instance_variable_get("@#{param_name}")  %>
